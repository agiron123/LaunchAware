<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Wallpaper"
    android:weightSum="1"
    tools:context="com.launcher.openlauncher.LauncherHomeActivity">

    <com.launcher.openlauncher.ui.AppItem
        android:id="@+id/app_item_one"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.2" />

    <com.launcher.openlauncher.ui.AppItem
        android:id="@+id/app_item_two"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.2" />

    <com.launcher.openlauncher.ui.AppItem
        android:id="@+id/app_grid_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.2"
        android:src="@mipmap/ic_grid_launcher" />

    <com.launcher.openlauncher.ui.AppItem
        android:id="@+id/app_item_three"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.2" />


    <com.launcher.openlauncher.ui.AppItem
        android:id="@+id/app_item_four"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.2" />

</LinearLayout>
