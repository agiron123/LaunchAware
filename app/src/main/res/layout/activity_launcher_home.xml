<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Wallpaper"
    tools:context="com.launcher.openlauncher.LauncherHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:weightSum="1">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/favorites_view_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_grid_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:columnWidth="@dimen/home_grid_column_width"
            android:numColumns="2" />

        <ImageView
            android:id="@+id/app_grid_image"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@mipmap/ic_launcher" />

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/favorites_view_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_grid_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:columnWidth="@dimen/home_grid_column_width"
            android:numColumns="auto_fit" />

    </LinearLayout>

</RelativeLayout>